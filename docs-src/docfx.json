{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "../",
          "files": ["**/*.csproj"],
          "exclude": [
            "Automata.App/Automata.App.csproj",
            "Automata.CoreTests/Automata.CoreTests.csproj"
          ]
        }
      ],
      "dest": "../docs/obj/api",
      "disableGitFeatures": false,
    }
  ],

  "build": {
    "content": [
      { "files": ["index.md"] },
      { "src": "../docs/obj/api", "files": ["**/*.yml"] }
    ],
    "xrefService": [
      "https://xref.docs.microsoft.com/query?uid={uid}"
    ],
    "output": "../docs",
    "template": [
      "default",
      "templates/singulinkfx"
    ],
    "globalMetadata": {
      "_appName": "Automata Docs",
      "_appTitle": "Automata Docs",
      "_enableSearch": true,
      "_appLogoPath": "images/automata-icon.svg"
    }
  }
}
