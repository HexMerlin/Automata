{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "../.",
          "files": ["**/*.csproj"]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      { "files": ["index.md"] },
      { "files": ["api/**"] }
    ],
    "output": "_site",
    "template": [
        "default",
        "modern"
    ],
    "globalMetadata": {
      "_appName": "AutomataDocs",
      "_appTitle": "AutomataDocs",
      "_enableSearch": true
    }
  }
}
